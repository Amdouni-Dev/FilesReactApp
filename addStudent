            <h2 className="mb-3">Ajouter un étudiant</h2>
            {message && <div className="alert alert-info">{message}</div>}
            <form onSubmit={handleSubmit}>
                <div className="mb-3">
                    <label htmlFor="name" className="form-label">Nom</label>
                    <input
                        type="text"
                        className="form-control"
